	void TestCode_IniSt_To_StUnderTest(void);
	void TestCode_CallMethod(unsigned int m);
};


TEST_LED::LED_STATE const TEST_LED::ValidNewState[NUM_OF_STATES][NUM_OF_METHODS] =
{
	<METHOD_ValidNewState>
};

